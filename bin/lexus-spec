#!/usr/bin/env node
const fs = require('fs');
const sb = require('sb-promisify');
const spec = require('../lib/lexus-spec');

switch (process.argv[2]) {
  case 'bundle':
    doBundle();
    break;
  case 'validate':
    doValidate(process.argv[3]);
    break;
  default:
    exit(1, 'Invalid option provided!');
}

function doBundle() {
  spec
    .bundle()
    .then(schema => exit(0, JSON.stringify(schema, null, 2)))
    .catch(err => exit(1, err));
}

function doValidate(query) {
  sb.promisify(fs.readFile)(query)
    .then(JSON.parse)
    .then(query => spec.validate(query))
    .then(() => exit(0))
    .catch(err => exit(1, err));
}

function exit(code, msg) {
  if (msg) {
    console[code === 0 ? 'info' : 'error'](msg);
  }
  process.exit(code);
}
